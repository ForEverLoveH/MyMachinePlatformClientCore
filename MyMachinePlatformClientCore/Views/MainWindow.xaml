<Window x:Class="MyMachinePlatformClientCore.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:MyMachinePlatformClientCore.Views"
        mc:Ignorable="d"
        Title="MainWindow"  Background="Transparent" WindowState="Normal " WindowStartupLocation="CenterScreen" >
    
    <Grid>
        <MediaElement x:Name="MyMediaElement" LoadedBehavior="Play" UnloadedBehavior="Manual" Stretch="UniformToFill"     />
        <Viewbox Height="1080" Width="1920" Panel.ZIndex="1"  >
            <Grid  x:Name="mGrid" Visibility="Hidden">
                <Grid.Background>
                    <ImageBrush ImageSource="../Images/背景界面.png" />
                </Grid.Background>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="150*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" >
                    <ScrollViewer HorizontalAlignment="Center" VerticalAlignment="Center" >
                       
                    </ScrollViewer>
                </Grid>
                <Grid Grid.Column="1" >
                    
                </Grid>
            </Grid>
        </Viewbox>
       
        
    </Grid>
</Window>
